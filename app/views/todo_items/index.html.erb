<h1><%= @todo_list.title %></h1> <!--#08-15-->

<!--Added from step 08-16-->
<table class="todo_items">
    <table class="todo_items">
        
    <thead>
        <tr>
            <th width="25%">Completed?</th>
            <th width="65%">Content</th>
            <th width="10%">Functions</th>
        </tr>
    </thead>
    
    <tbody>
        <% @todo_list.todo_items.each do |todo_item| %>
            <tr id="<%= dom_id(todo_item) %>">
                
                <td>
                    <!--If statement added from step 13-10, modified in step 13-11-->
                    <% if todo_item.completed? %>
                        <!--Added from step 13-10-->
                        <%= todo_item.completed_at %>
                    <% else %>
                        <!--Added from step 13-6-->
                        <%= link_to "Mark Complete", complete_todo_list_todo_item_path(todo_item), method: :patch %>
                    <% end %>
                </td>
                
                <!--end add 13-10-->
                <td><%= todo_item.content %></td>
                
                <td>
                    <!--Added from step 10-8-->
                    <%= link_to "Edit", edit_todo_list_todo_item_path(todo_item) %>
                    <!--Added from step 12-2-->
                    <%= link_to "Delete", todo_list_todo_item_path(todo_item), method: :delete, data: { confirm: "Are you sure?" } %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<!--Added from step 09-3-->
<p>
    <%= link_to "New Todo Item", new_todo_list_todo_item_path %>
</p>